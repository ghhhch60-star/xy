<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 背景图片 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_anime"
        android:scaleType="centerCrop"
        android:alpha="0.95" />

    <!-- 内容容器 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 标题卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/anime_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✨ XY Root Manager ✨"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/anime_text_black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="系统分区备份管理器"
                        android:textSize="16sp"
                        android:textColor="@color/anime_text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Root状态卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rootStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/anime_surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/imageViewRootStatus"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_error"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/textViewRootStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未获取Root权限"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/anime_text_black" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewRootType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Root类型: 未知"
                            android:textSize="14sp"
                            android:textColor="@color/anime_text_secondary"
                            android:layout_marginTop="4dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRequestRoot"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请求权限"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/anime_button_blue"
                        app:icon="@drawable/ic_shield"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 备份进度卡片 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/backupProgressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/anime_surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_backup_all"
                            android:layout_marginEnd="12dp"
                            android:tint="@color/anime_blue" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📦 备份进度"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/anime_text_black" />

                        <TextView
                            android:id="@+id/backupProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/anime_blue" />

                    </LinearLayout>

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/backupProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:indicatorColor="@color/anime_blue"
                        app:trackColor="@color/anime_blue_light"
                        app:trackThickness="10dp"
                        app:trackCornerRadius="5dp" />

                    <TextView
                        android:id="@+id/backupProgressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="准备开始备份..."
                        android:textSize="14sp"
                        android:textColor="@color/anime_text_secondary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/currentBackupFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="当前文件: 正在初始化..."
                        android:textSize="13sp"
                        android:textColor="@color/anime_text_secondary"
                        android:fontFamily="monospace"
                        android:background="@color/anime_background_light"
                        android:padding="12dp"
                        android:maxLines="1"
                        android:ellipsize="middle" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- 第一行按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRefreshPartitions"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="刷新"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/anime_button_blue"
                        android:enabled="false"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBatchBackup"
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="备份选中"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/anime_button_blue"
                        android:enabled="false"
                        app:icon="@drawable/ic_backup_all"
                        app:iconTint="@android:color/white"
                        app:cornerRadius="16dp" />

                </LinearLayout>

                <!-- 第二行按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckUpdate"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="检查更新"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/anime_green"
                    app:icon="@drawable/ic_update"
                    app:iconTint="@android:color/white"
                    app:cornerRadius="16dp" />

            </LinearLayout>

            <!-- 进度指示器 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/anime_surface_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:indicatorColor="@color/anime_blue"
                        app:trackColor="@color/anime_blue_light"
                        app:trackThickness="8dp"
                        app:trackCornerRadius="4dp" />

                    <TextView
                        android:id="@+id/textViewProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0%"
                        android:textColor="@color/anime_text_black"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 分区列表标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:paddingHorizontal="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📦 系统分区列表"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/anime_text_black" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectAll"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:text="全选"
                    android:textSize="12sp"
                    android:textColor="@color/anime_green"
                    android:enabled="false"
                    app:cornerRadius="8dp" />

                <TextView
                    android:id="@+id/textViewPartitionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现 0 个分区"
                    android:textSize="14sp"
                    android:textColor="@color/anime_text_secondary" />

            </LinearLayout>

            <!-- 空状态布局 -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(◕‿◕)"
                    android:textSize="48sp"
                    android:textColor="@color/anime_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无分区数据"
                    android:textSize="16sp"
                    android:textColor="@color/anime_text_secondary"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <!-- 分区列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPartitions"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
