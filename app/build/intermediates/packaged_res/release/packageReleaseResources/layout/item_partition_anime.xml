<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/anime_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 选择复选框 -->
        <CheckBox
            android:id="@+id/checkBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <!-- 分区图标 -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/anime_blue_light"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewPartitionIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💾"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- 分区信息 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/textViewPartitionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="boot"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/anime_text_black" />

            <TextView
                android:id="@+id/textViewPartitionPath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/dev/block/sda1"
                android:textSize="12sp"
                android:textColor="@color/anime_text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/textViewPartitionSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大小: 64 MB"
                android:textSize="12sp"
                android:textColor="@color/anime_text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- 备份状态 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewBackupStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓"
                android:textSize="24sp"
                android:textColor="@color/anime_blue"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackup"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="备份"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/anime_button_blue"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
